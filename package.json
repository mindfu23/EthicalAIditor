{
  "name": "ethicalaiditor",
  "version": "1.0.0",
  "description": "An interface and AI wrapper for writers and editors, that's linked to LLMs trained only on legally and publicly available writing materials.",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "worker:dev": "wrangler dev",
    "worker:deploy": "wrangler deploy",
    "db:init": "wrangler d1 execute ethicalaiditor-db --file=schema.sql"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mindfu23/EthicalAIditor.git"
  },
  "keywords": [
    "ai",
    "writing",
    "editor",
    "ethical-ai",
    "common-corpus",
    "pleias"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/mindfu23/EthicalAIditor/issues"
  },
  "homepage": "https://github.com/mindfu23/EthicalAIditor#readme",
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "@vitejs/plugin-react": "^4.7.0",
